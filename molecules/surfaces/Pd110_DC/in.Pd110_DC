log             log.Pd110_DC append
units           real
atom_style      full
boundary        p p f

pair_style      lj/cut/coul/long 12.500
bond_style      harmonic
angle_style     cosine/periodic
dihedral_style  harmonic
improper_style  fourier
kspace_style    ewald 0.000001

special_bonds   lj/coul 0.0 0.0 1.0
pair_modify     tail yes mix arithmetic
dielectric      1.0
box tilt        large
read_data       data.Pd110_DC

#### Atom Groupings ####
group           1        id   751:804
group           fram     id   1:750
#### END Atom Groupings ####


#### Simulation Parameters ####
variable        T equal 298
variable        dt equal 0.5
variable        seed equal 123456
variable        txyz equal 10000
dump            1 all xyz ${txyz} traj.xyz
dump_modify     1 element Pd C H
velocity        all create $T ${seed} dist uniform
timestep        ${dt}
thermo          10000
thermo_style    custom step temp press pe etotal pxx pyy pzz pxy pxz pyz

### Equilibration in NVT ###
fix             NVT all nvt temp $T $T 100
run             1000000
unfix           NVT
